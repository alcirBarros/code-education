<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_1.xsd"
              version="2.1">
    <application>
        <el-resolver>org.springframework.web.jsf.el.SpringBeanFacesELResolver</el-resolver>
        <el-resolver>br.com.template.project.EmptyToNullStringELResolver</el-resolver>
     
        <resource-bundle>
            <base-name>br.com.template.i18n.AdminUTF8Bundle</base-name>
            <var>adm</var>
        </resource-bundle>
    </application>
    
    <factory>
        <exception-handler-factory>br.com.template.exception.CustomExceptionHandlerFactory</exception-handler-factory>
    </factory>
    
</faces-config>